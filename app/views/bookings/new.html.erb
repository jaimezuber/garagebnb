<div class="container">
    <h1>New Booking</h1>
    <div class="d-flex justify-content-end">
      <p class=“font-weight-bold”>Price: $<%= @garage.price %></p>
    </div>
  <div class="m-3">
    <%= simple_form_for [ @garage, @booking ] do |f| %>
      <%= f.input :initial_date, data: {
                      controller: "flatpickr",
                      flatpickr_date_format: "Y-m-d",
                      flatpickr_min_date: Time.zone.now } %>
      <%= f.input :end_date,data: {
                      controller: "flatpickr",
                      flatpickr_date_format: "Y-m-d",
                      flatpickr_min_date: Time.zone.now } %>
      <%= f.submit "Submit Booking", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
